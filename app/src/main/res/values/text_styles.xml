<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Layout_Match_Wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MaliTextStyle" parent="Layout_Match_Wrap">
        <item name="android:fontFamily">@font/font_mali</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.05</item>
    </style>

    <style name="MerriweatherTextStyle" parent="Layout_Match_Wrap">
        <item name="android:fontFamily">@font/font_merriweather</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.05</item>
    </style>

    <style name="ChineseTextStyle" parent="Layout_Match_Wrap">
        <item name="android:fontFamily">@font/font_chinese</item>
        <item name="android:letterSpacing" tools:targetApi="lollipop">0.05</item>
    </style>

</resources>
